<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:icon="@drawable/ic_launcher_foregroundofi"
        android:roundIcon="@drawable/ic_launcher_foregroundofi"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"

        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/Theme.SonrieAprende">

        <!-- Splash Activity (pantalla de inicio) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity (pantalla principal de la app) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.SonrieAprende" />

        <activity
            android:name=".ContarAnimales"
            android:enableOnBackInvokedCallback="true"
            android:exported="true" />

        <activity
            android:name=".MemoramaColores"
            android:enableOnBackInvokedCallback="true"
            android:exported="true" />

        <activity
            android:name=".ShapesGameActivity"
            android:enableOnBackInvokedCallback="true"
            android:exported="true" />

    </application>

</manifest>