<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/menu_item_background"
    android:padding="12dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="6dp"
    android:gravity="center_vertical"
    android:contentDescription="Item del menú">

    <!-- Ícono PEGADO al texto -->
<TextView
android:id="@+id/itemIcon"
android:layout_width="30dp"
android:layout_height="30dp"
android:gravity="center"
android:textSize="20sp"
android:layout_marginEnd="8dp"
    android:contentDescription="Ícono del juego" />

    <!-- Contenido del texto -->
<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical"
android:gravity="center_vertical">

<TextView
    android:id="@+id/itemTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="14sp"
    android:textStyle="bold"
    android:textColor="#333"
    android:fontFamily="sans-serif"
    android:contentDescription="Título del juego" />

<TextView
    android:id="@+id/itemAge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="11sp"
android:textColor="#666"
android:contentDescription="Rango de edad" />

</LinearLayout>

    <!-- Sparkle con menos espacio -->
<TextView
android:id="@+id/sparkle"
android:layout_width="20dp"
android:layout_height="20dp"
android:gravity="center"
android:text="✨"
android:textSize="14sp"
android:alpha="0"
android:layout_marginStart="4dp"
    android:contentDescription="Efecto decorativo" />

    </LinearLayout>