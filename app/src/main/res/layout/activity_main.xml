<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Contenido principal -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/header_background"
            android:padding="15dp"
            android:gravity="center_vertical"
            android:elevation="4dp">

            <!-- Logo con formas -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="10dp">

                    <!-- C칤rculo peque침o -->
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/circle_shape_small"
                        android:layout_marginEnd="3dp" />

                    <!-- Cuadrado peque침o -->
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/square_shape_small"
                        android:layout_marginEnd="3dp" />

                    <!-- Tri치ngulo peque침o -->
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/triangle_shape_small" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sonr칤e &amp; Aprende"
                    android:textColor="@color/text_shadow"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Espacio flexible -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Bot칩n del men칰 -->
            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_menu"
                android:contentDescription="Abrir men칰" />

        </LinearLayout>

        <!-- ScrollView para el contenido principal -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:fillViewport="true"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Secci칩n de Introducci칩n -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="춰Bienvenido a Sonr칤e &amp; Aprende!"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:shadowColor="@color/text_shadow"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:gravity="center"
                        android:layout_marginBottom="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Donde el aprendizaje se convierte en una aventura divertida. Descubre un mundo m치gico lleno de juegos educativos dise침ados especialmente para ni침os curiosos como t칰."
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp"
                        android:gravity="center"
                        android:layout_marginBottom="25dp" />

                    <!-- Formas animadas -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="25dp">

                        <ImageView
                            android:id="@+id/introCircle"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/circle_shape"
                            android:layout_marginEnd="15dp" />

                        <ImageView
                            android:id="@+id/introSquare"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/square_shape"
                            android:layout_marginEnd="15dp" />

                        <ImageView
                            android:id="@+id/introTriangle"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/triangle_shape" />

                    </LinearLayout>

                    <!-- Reto del D칤a -->
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/challenge_background"
                        android:padding="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="游끥 Reto del D칤a"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Encuentra 5 animales que empiecen con &quot;A&quot;"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:gravity="center" />

                        <Button
                            android:id="@+id/challengeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aceptar Reto"
                            android:background="@drawable/button_challenge"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Juegos Destacados -->
                <LinearLayout
                    android:id="@+id/gamesSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juegos Destacados"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:shadowColor="@color/text_shadow"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp" />

                    <!-- GridView con altura din치mica -->
                    <GridView
                        android:id="@+id/gamesGrid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    android:verticalSpacing="15dp"
                    android:horizontalSpacing="15dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center" />

                </LinearLayout>

                <!-- Bot칩n Ver M치s -->
                <LinearLayout
                    android:id="@+id/seeMoreSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="20dp">

                    <Button
                        android:id="@+id/seeMoreButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver M치s Juegos 俱뫮잺"
                        android:background="@drawable/button_see_more"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp" />

                </LinearLayout>

                <!-- Footer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hecho con 仇벒잺 para ni침os curiosos"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desarrollado por J &amp; Asociados"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <!-- Men칰 lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/white"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay">

        <!-- LinearLayout principal que contiene header y contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header del men칰 -->
            <include layout="@layout/menu_header" />

            <!-- ScrollView para el contenido del men칰 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:contentDescription="Men칰 de juegos educativos">

                <LinearLayout
                    android:id="@+id/menuContentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp" />

            </ScrollView>

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>